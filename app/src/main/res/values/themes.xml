<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PastaCooking" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textSize">@dimen/x50</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="fontFamily">幼圆</item>
    </style>

    <style name="ButtonStype" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/x15</item>
    </style>

    <style name="InputStype">
        <item name="android:background">@drawable/shape_edit</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/x20</item>
    </style>

    <style name="SwitchStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorSwitchThumbNormal">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/x15</item>
    </style>

    <style name="PopupTheme" >
        <item name="android:windowEnterAnimation">@anim/anim_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_popup_exit</item>
    </style>
    
</resources>