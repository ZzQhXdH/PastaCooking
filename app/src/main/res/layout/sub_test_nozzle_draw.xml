<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/y400"
    android:layout_height="@dimen/x280"
    android:padding="@dimen/x10"
    android:background="@drawable/shape_item">

    <TextView
        android:id="@+id/textView6"
        style="@style/TextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x8"
        android:text="喷嘴放水"
        android:textSize="@dimen/x45"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x70"
        android:layout_marginTop="@dimen/x8"
        android:text="放水体积:"
        android:textSize="@dimen/x35"
        app:layout_constraintEnd_toStartOf="@+id/id_input_puls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/id_input_puls"
        style="@style/InputStype"
        android:layout_width="@dimen/x180"
        android:layout_height="@dimen/x70"
        android:layout_marginTop="@dimen/x8"
        android:text="50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.785"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        style="@style/ButtonStype"
        android:layout_width="@dimen/y280"
        android:layout_height="@dimen/x90"
        android:text="放水"
        android:id="@+id/id_btn_set"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />


</androidx.constraintlayout.widget.ConstraintLayout>