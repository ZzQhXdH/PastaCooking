<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/y400"
    android:layout_height="@dimen/x280"
    android:padding="@dimen/x10"
    android:background="@drawable/shape_item">

    <TextView
        android:id="@+id/textView4"
        style="@style/TextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x8"
        android:text="测试喷嘴电机"
        android:textSize="@dimen/x45"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x70"
        android:text="离零点距离:"
        android:textSize="@dimen/x35"
        app:layout_constraintBottom_toBottomOf="@+id/id_input_distance"
        app:layout_constraintEnd_toStartOf="@+id/id_input_distance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/id_input_distance" />

    <EditText
        android:id="@+id/id_input_distance"
        style="@style/InputStype"
        android:layout_width="@dimen/x180"
        android:layout_height="@dimen/x70"
        android:layout_marginTop="@dimen/x8"
        android:text="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/id_btn_reset"
        style="@style/ButtonStype"
        android:layout_width="@dimen/y180"
        android:layout_height="@dimen/x90"
        android:text="复位"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/id_btn_run"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/id_btn_run"
        style="@style/ButtonStype"
        android:layout_width="@dimen/y180"
        android:layout_height="@dimen/x90"
        android:text="运行"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_btn_reset"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

</androidx.constraintlayout.widget.ConstraintLayout>