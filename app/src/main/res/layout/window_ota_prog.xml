<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/x240"
    android:layout_height="@dimen/y320"
    android:background="@drawable/shape_item"
    android:padding="@dimen/x10">

    <Button
        android:id="@+id/id_btn_close"
        android:layout_width="@dimen/x50"
        android:layout_height="@dimen/y50"
        android:background="@drawable/btn_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_tv_title"
        style="@style/TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:text="标题"
        android:textSize="@dimen/x20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_btn_close" />

    <ProgressBar
        android:id="@+id/id_prog"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/y150"
        android:layout_marginTop="@dimen/x10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_title" />

    <ImageView
        android:id="@+id/id_image"
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/y150"
        android:src="@drawable/ic_ok"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/id_prog"
        app:layout_constraintTop_toTopOf="@+id/id_prog" />

    <TextView
        android:id="@+id/id_tv_prog"
        style="@style/TextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x16"
        android:text="进度:"
        android:textSize="@dimen/x15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_prog" />

</androidx.constraintlayout.widget.ConstraintLayout>