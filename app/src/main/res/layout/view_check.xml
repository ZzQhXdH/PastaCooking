<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/id_check_view"
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/y40"
        android:background="@drawable/shape_gray"
        app:layout_constraintBottom_toBottomOf="@+id/id_check_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/id_check_text_view" />

    <TextView
        android:id="@+id/id_check_text_view"
        style="@style/TextViewStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/x10"
        android:gravity="start|center_vertical"
        android:text="旋转零点"
        android:textSize="@dimen/x15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_check_view"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>