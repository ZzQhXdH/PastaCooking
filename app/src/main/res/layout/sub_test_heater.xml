<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/y400"
    android:layout_height="@dimen/x280"
    android:padding="@dimen/x10"
    android:background="@drawable/shape_item">

    <TextView
        android:id="@+id/id_text_view_title"
        style="@style/TextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x8"
        android:text="测试加热器"
        android:textSize="@dimen/x45"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/id_spinner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_marginStart="@dimen/y40"
        android:layout_marginTop="@dimen/y8"
        android:layout_marginEnd="@dimen/y40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_text_view_title" />

    <Button
        android:id="@+id/id_btn_open"
        style="@style/ButtonStype"
        android:layout_width="@dimen/y180"
        android:layout_height="@dimen/x90"
        android:layout_marginTop="@dimen/y8"
        android:layout_marginBottom="@dimen/y8"
        android:text="打开"
        android:textSize="@dimen/x35"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/id_btn_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_spinner" />

    <Button
        android:id="@+id/id_btn_close"
        style="@style/ButtonStype"
        android:layout_width="@dimen/y180"
        android:layout_height="@dimen/x90"
        android:layout_marginTop="@dimen/y8"
        android:layout_marginBottom="@dimen/y8"
        android:text="关闭"
        android:textSize="@dimen/x35"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_btn_open"
        app:layout_constraintTop_toBottomOf="@+id/id_spinner" />


</androidx.constraintlayout.widget.ConstraintLayout>